<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".ui.shopping.ShoppingFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No items to shop..."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"/>

    <ImageButton
        android:id="@+id/ib_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/bg_general"
        android:src="@drawable/ic_sms_24"
        app:layout_constraintEnd_toStartOf="@id/ib_maps"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"/>

    <ImageButton
        android:id="@+id/ib_maps"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/bg_general"
        android:src="@drawable/ic_map_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>